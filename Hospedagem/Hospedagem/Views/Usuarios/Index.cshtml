@model IEnumerable<Hospedagem.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h4>  Usuários  </h4>
@Html.ActionLink("Adicionar", "Inserir")
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IDUsuario)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Login)</th>
        <th>@Html.DisplayNameFor(model => model.Senha)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IDUsuario</td>
            <td>@item.Nome</td>
            <td>@item.Login</td>
            <td>@item.Senha</td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id = item.IDUsuario }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.IDUsuario })
            </td>
        </tr>
    }
</table>